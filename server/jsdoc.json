{
  "source": {
    "include": ["."],  
    "includePattern": ".+\\.js(doc|x)?$",  
    "excludePattern": "(node_modules|docs|dist)"  
  },
  "opts": {
    "destination": "./docs",  
    "recurse": true  
  },
  "plugins": ["plugins/markdown"],  
    "templates": {
    "cleverLinks": true,
    "monospaceLinks": true
  }
}
